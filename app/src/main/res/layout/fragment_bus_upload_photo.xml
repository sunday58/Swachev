<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.auth.bus_upload_photo"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- TODO: Update blank fragment layout -->
    <FrameLayout
        android:id="@+id/photo_upload_bussiness"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:hintEnabled="false"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginVertical="50dp"
        android:layout_marginHorizontal="60dp"
        app:errorEnabled="true"
        app:boxStrokeColor="#00AFF0"
        app:boxStrokeWidth="2dp"
        app:boxBackgroundColor="#C1BDBD"
        app:boxCornerRadiusTopStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="8dp"
        app:boxCornerRadiusBottomEnd="10dp"
        android:background="@drawable/edit_backgorund_design">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_calligraphic_pen"
            android:layout_gravity="bottom"
            android:layout_marginBottom="30dp"
            android:layout_marginStart="250dp"/>


    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:layout_margin="20dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="Upload Photo"
        android:textColor="@color/design_default_color_on_secondary" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="Your face has to be well lit, make sure \nyou don't have any background lights"
        android:textColor="@color/design_default_color_on_secondary" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/upload_next_bus"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:text="@string/next"
        android:textSize="16sp"
        android:fontFamily="@font/roboto"
        android:layout_marginTop="30dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        style="@style/MyButton"
        android:textColor="@color/white"
        android:elevation="8dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/colorPrimaryDark"/>

</LinearLayout>